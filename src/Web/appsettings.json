{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=(localdb)\\mssqllocaldb;Integrated Security=true;Initial Catalog=IncomeManagement_GovUkPayIntegration;",
          "tableName": "ApplicationLog",
          "autoCreateSqlTable": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ],
    "Properties": {
      "Application": "LocaGovIms.Integrations.GovUkPay"
    }
  },
  "AllowedHosts": "*",
  "PaymentPortalUrl": "http://localhost:53837/",
  "LocalGovImsApiUrl": "https://localhost:44364/",
  "PaymentPortalFailureEndpoint": "Payment/Fail",
  "ConnectionStrings": {
    "ImsGovUkPayDatabase": "Server=(localdb)\\mssqllocaldb;Integrated Security=true;Initial Catalog=IncomeManagement_GovUkPayIntegration;"
  }
}
